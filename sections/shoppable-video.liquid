{{ 'section-shoppable-video.css' | asset_url | stylesheet_tag }}
{{ 'component-modal-video.css' | asset_url | stylesheet_tag }}
{{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .shoppable-video__grid-{{ section.id }} {
    display: flex;
    overflow-x: auto;
    gap: 1.2rem;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
  }

  .shoppable-video__grid-{{ section.id }}::-webkit-scrollbar {
    height: 0.4rem;
  }

  .shoppable-video__grid-{{ section.id }}::-webkit-scrollbar-track {
    background: transparent;
  }

  .shoppable-video__grid-{{ section.id }}::-webkit-scrollbar-thumb {
    background: rgba(var(--color-foreground), 0.2);
    border-radius: 0.2rem;
  }

  .shoppable-video__item-{{ section.id }} {
    flex: 0 0 calc(100% - 1.2rem);
    scroll-snap-align: start;
    scroll-behavior: smooth;
  }

  @media screen and (min-width: 750px) {
    .shoppable-video__grid-{{ section.id }} {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      overflow-x: unset;
      scroll-snap-type: unset;
    }

    .shoppable-video__item-{{ section.id }} {
      flex: unset;
      scroll-snap-align: unset;
    }
  }

  @media screen and (min-width: 1200px) {
    .shoppable-video__grid-{{ section.id }} {
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="shoppable-video isolate{% unless section.settings.full_width %} page-width{% endunless %} section-{{ section.id }}-padding">
    {%- unless section.settings.heading == blank -%}
      <div class="shoppable-video__header">
        <h2 class="inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.heading }}
        </h2>
        {%- if section.settings.text != blank -%}
          <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.text }}
          </div>
        {%- endif -%}
      </div>
    {%- endunless -%}

    <div class="shoppable-video__grid-{{ section.id }}">
      {%- for block in section.blocks -%}
        {%- liquid
          assign video_id = block.settings.video.id | default: block.settings.video_url.id
          assign video_alt = block.settings.video.alt | default: block.settings.description
          assign poster = block.settings.video.preview_image | default: block.settings.cover_image

          if poster != null
            assign ratio_percent = 1 | divided_by: poster.aspect_ratio | times: 100
          else
            assign ratio_percent = 56.25
          endif
        -%}

        <div class="shoppable-video__item-{{ section.id }}">
          <div class="shoppable-video__media-wrapper">
            <div
              class="shoppable-video__media media media--transparent ratio global-media-settings"
              style="--ratio-percent: {{ ratio_percent }}%;"
            >
              {%- if block.settings.video != null -%}
                {{
                  block.settings.video
                  | video_tag:
                    image_size: '1100x',
                    autoplay: false,
                    loop: section.settings.enable_video_looping,
                    muted: true,
                    controls: false,
                    playsinline: true
                }}
              {%- elsif block.settings.video_url != null -%}
                {%- if block.settings.video_url.type == 'youtube' -%}
                  <iframe
                    src="https://www.youtube.com/embed/{{ video_id }}?controls=0&modestbranding=1&playsinline=1"
                    allow="autoplay; encrypted-media"
                    allowfullscreen
                    title="{{ video_alt | escape }}"
                  ></iframe>
                {%- else -%}
                  <iframe
                    src="https://player.vimeo.com/video/{{ video_id }}?badge=0"
                    allow="autoplay; encrypted-media"
                    allowfullscreen
                    title="{{ video_alt | escape }}"
                  ></iframe>
                {%- endif -%}
              {%- else -%}
                {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
            </div>

            <modal-opener data-modal="#ShoppableVideoModal-{{ section.id }}-{{ forloop.index }}">
              <button
                class="shoppable-video__overlay-button"
                type="button"
                aria-haspopup="dialog"
                aria-label="{{ 'sections.video.load_video' | t: description: video_alt | escape }}"
              ></button>
            </modal-opener>
          </div>
        </div>

        <modal-dialog
          id="ShoppableVideoModal-{{ section.id }}-{{ forloop.index }}"
          class="modal-video media-modal color-{{ settings.color_schemes | first }}"
        >
          <div class="modal-video__content" role="dialog" aria-label="{{ video_alt | escape }}" aria-modal="true" tabindex="-1">
            <button
              id="ModalClose-{{ section.id }}-{{ forloop.index }}"
              type="button"
              class="modal-video__toggle"
              aria-label="{{ 'accessibility.close' | t }}"
            >
              <span class="svg-wrapper">
                {{- 'icon-close.svg' | inline_asset_content -}}
              </span>
            </button>
            <div class="modal-video__content-info">
              <div class="shoppable-video__modal-body">
                <div class="shoppable-video__modal-media">
                  <deferred-media class="shoppable-video__modal-video template-popup">
                    <template>
                      {%- if block.settings.video != null -%}
                        {{
                          block.settings.video
                          | video_tag:
                            image_size: '1100x',
                            autoplay: true,
                            loop: section.settings.enable_video_looping,
                            muted: false,
                            controls: true
                        }}
                      {%- elsif block.settings.video_url != null -%}
                        {%- if block.settings.video_url.type == 'youtube' -%}
                          <iframe
                            src="https://www.youtube.com/embed/{{ video_id }}?autoplay=1&enablejsapi=1"
                            class="js-youtube"
                            allow="autoplay; encrypted-media"
                            allowfullscreen
                            title="{{ video_alt | escape }}"
                          ></iframe>
                        {%- else -%}
                          <iframe
                            src="https://player.vimeo.com/video/{{ video_id }}?autoplay=1"
                            class="js-vimeo"
                            allow="autoplay; encrypted-media"
                            allowfullscreen
                            title="{{ video_alt | escape }}"
                          ></iframe>
                        {%- endif -%}
                      {%- endif -%}
                    </template>
                  </deferred-media>
                </div>

                <div class="shoppable-video__modal-product">
                  {%- if block.settings.product != blank -%}
                    <h3 class="h3">{{ block.settings.product.title }}</h3>
                    {% render 'price', product: block.settings.product, use_variant: true, show_compare_at_price: true %}
                    <div class="shoppable-video__modal-cta">
                      <a class="button button--primary" href="{{ block.settings.product.url }}">
                        {{- block.settings.button_label | escape -}}
                      </a>
                    </div>
                  {%- else -%}
                    <h3 class="h3">Select a product</h3>
                    <p class="rte">Choose a product in the block settings to show price and the Buy Now button.</p>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        </modal-dialog>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Shoppable video",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Shop the look",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra large"
        },
        {
          "value": "hxxl",
          "label": "Huge"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Tap the video to shop the featured product.</p>",
      "label": "Text"
    },
    {
      "type": "checkbox",
      "id": "enable_video_looping",
      "label": "Loop video",
      "default": true
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "header",
          "content": "Video"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Shopify hosted video"
        },
        {
          "type": "video_url",
          "id": "video_url",
          "accept": ["youtube", "vimeo"],
          "label": "YouTube or Vimeo URL"
        },
        {
          "type": "image_picker",
          "id": "cover_image",
          "label": "Cover image (optional)"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Video description",
          "default": "Shoppable video"
        },
        {
          "type": "header",
          "content": "Product"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Buy now",
          "label": "Button label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shoppable video",
      "blocks": [
        {
          "type": "video"
        },
        {
          "type": "video"
        },
        {
          "type": "video"
        }
      ]
    }
  ]
}
{% endschema %}
